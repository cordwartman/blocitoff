<!DOCTYPE html>
<html>
  <head>
    <title>Cross It Off</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Patrick+Hand+SC" rel="stylesheet">
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="nav navbar-nav navbar-right">
            <ul class="nav navbar-nav">
              <li>
                <% if user_signed_in? %>
                  <div class="user-creds">
                    Signed in as: <%= link_to current_user.email, user_path(current_user.id), :class => 'navbar-link' %></strong><br>
                    <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> <br>
                    <%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
                  </div>
                <% else %>
                  <div style="display: inline-block;">
                    <%= link_to "Sign Up", new_user_registration_path, :class => 'navbar-link' %> -
                    <%= link_to "Sign In", new_user_session_path, :class => 'navbar-link'  %>
                  </div>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <ul class="nav navbar-nav">
            <li class="active" style="font-size: 24px;"><%= link_to "Cross It Off", welcome_index_path %></li>
            <li><%= link_to "About", welcome_about_path %></li>
          </ul>
        </div>
      </nav>
      <% if flash[:notice] %>
          <div class="alert alert-success">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:notice] %>
          </div>
        <% elsif flash[:alert] %>
          <div class="alert alert-warning">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <%= flash[:alert] %>
          </div>
        <% end %>
      <%= yield %>
    </div>
  </body>
</html>
